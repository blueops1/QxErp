unit yskkhmxz;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Grids;

type
  TForm42 = class(TForm)
    StringGrid1: TStringGrid;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form42: TForm42;

implementation

uses yskjs;

{$R *.dfm}

procedure TForm42.FormShow(Sender: TObject);
var
  i:integer;
begin
  stringgrid1.RowCount:=2;
  stringgrid1.Rows[1].Clear;
  stringgrid1.Cells[0,0]:='序号';
  stringgrid1.Cells[0,0]:='序号';
  stringgrid1.Cells[0,0]:='序号';
  stringgrid1.Cells[0,0]:='序号';
  stringgrid1.Cells[0,0]:='序号';
  form42.Caption:=form42.Caption+yskjs.strYskbh+yskjs.strYskbh;
  try
    with yskjs.Form41.ZStoredProc1 do
    begin
      close;
      StoredProcName:='proc_cs_yskkhmzx_by_yskbh';
      ParamByName('yskbh').Value:=yskjs.strYskbh;
      open;
      i:=1;
      while not eof do
      begin
        stringgrid1.RowCount:=stringgrid1.RowCount+1;
        stringgrid1.Cells[0,i]:=inttostr(i);
        stringgrid1.Cells[1,i]:=fields[0].AsString;
        stringgrid1.Cells[2,i]:=fields[1].AsString;
        stringgrid1.Cells[3,i]:=fields[2].AsString;
        stringgrid1.Cells[4,i]:=fields[3].AsString;
        i:=i+1;
        stringgrid1.Rows[stringgrid1.RowCount-1].Clear;
        next;
      end;
    end;
  except
    application.MessageBox('数据查询失败！','应收款警示管理提示');
  end;
end;

end.
