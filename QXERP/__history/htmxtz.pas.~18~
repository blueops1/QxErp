  TForm60 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label13: TLabel;
    Label19: TLabel;
    Label20: TLabel;
    Label21: TLabel;
    Label22: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    Label16: TLabel;
    Edit1: TEdit;
    Edit11: TEdit;
    Edit12: TEdit;
    Edit13: TEdit;
    ComboBox1: TComboBox;
    StringGrid1: TStringGrid;
    Edit7: TEdit;
    Edit8: TEdit;
    Button1: TButton;
    ComboBox3: TComboBox;
    Memo1: TMemo;
    Edit2: TEdit;
    ZStoredProc1: TZStoredProc;
    PopupMenu1: TPopupMenu;
    N1: TMenuItem;
    Edit3: TEdit;
    Edit4: TEdit;
    Label5: TLabel;
