          Memo3.Perform(WM_VSCROLL, SB_TOP, 0);
          Memo3.Perform(EM_SETSEL, 0, 0);
          Memo3.SetFocus;
        end;
      end;
    except
      application.MessageBox('信息读取失败!','消息处理提示');
    end;
  end;
end;

