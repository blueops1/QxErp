{$R *.dfm}

procedure TForm16.Button1Click(Sender: TObject);
var y:integer;
begin
  y:=1;
  stringgrid1.RowCount:=1;
  stringgrid1.Cells[0,0]:='产品编号';
  stringgrid1.Cells[1,0]:='产品名称';
  stringgrid1.Cells[2,0]:='产品种类';
  stringgrid1.Cells[3,0]:='入库数量';
  stringgrid1.Cells[4,0]:='出库数量';
  try
    with adoquery1 do
    begin
      close;
      sql.Clear;
      sql.Add('select a.fcpbh,b.fcpmc,b.fcpzl,a.sumfrksl,a.sumfcksl from (select fcpbh,SUM(frksl) as sumfrksl,SUM(fcksl) as sumfcksl from cpcrkmxz where fjzdate>='''+datetimetostr(datetimepicker1.Date)+''' and fjzdate<='''+datetimetostr(datetimepicker2.Date)+''' group by fcpbh) as a inner join(select fcpbh,fcpmc,fcpzl from cplxk) as b on a.fcpbh=b.fcpbh order by b.fcpmc');
      open;
      stringgrid1.RowCount:=RecordCount+2;
      while not eof do
      begin
        stringgrid1.Cells[0,y]:=fields[0].AsString;
        stringgrid1.Cells[1,y]:=fields[1].AsString;
        stringgrid1.Cells[2,y]:=fields[2].AsString;
        stringgrid1.Cells[3,y]:=fields[3].AsString;
        stringgrid1.Cells[4,y]:=fields[4].AsString;
        y := y +1;
        next;
      end;
      sql.Clear;
      sql.Add('select ''合计'','''','''',sum(a.sumfrksl),sum(a.sumfcksl) from (select fcpbh,SUM(frksl) as sumfrksl,SUM(fcksl) as sumfcksl from cpcrkmxz where fjzdate>='''+datetimetostr(datetimepicker1.Date)+''' and fjzdate<='''+datetimetostr(datetimepicker2.Date)+''' group by fcpbh) as a inner join(select fcpbh,fcpmc,fcpzl from cplxk) as b on a.fcpbh=b.fcpbh');
      open;
      if not eof then
      begin
        stringgrid1.Cells[0,y]:=fields[0].AsString;
        stringgrid1.Cells[1,y]:=fields[1].AsString;
        stringgrid1.Cells[2,y]:=fields[2].AsString;
        stringgrid1.Cells[3,y]:=fields[3].AsString;
        stringgrid1.Cells[4,y]:=fields[4].AsString;
      end;
    end;
  Except
    Application.MessageBox('查询失败！','生产统计查询提示');
  end;
end;

procedure TForm16.Button2Click(Sender: TObject);
var y:integer;
begin
  y:=1;
  stringgrid3.RowCount:=1;
  stringgrid3.Cells[0,0]:='产品编号';
  stringgrid3.Cells[1,0]:='产品名称';
  stringgrid3.Cells[2,0]:='产品种类';
  stringgrid3.Cells[3,0]:='入库数量';
  stringgrid3.Cells[4,0]:='出库数量';
  try
    with adoquery1 do
    begin
      close;
      sql.Clear;
      sql.Add('select a.fcpbh,b.fcpmc,b.fcpzl,a.rkzs,a.ckzs from (select fcpbh,sum(frksl) as rkzs,SUM(fcksl) as ckzs from cpcrkmxz where datename(week,fjzdate)=datename(week,'''+datetimetostr(datetimepicker3.Date)+''') and year(fjzdate)=year('''+datetimetostr(datetimepicker3.Date)+''') and fisdel=''N'' group by fcpbh) as a join (select fcpbh,fcpmc,fcpzl from cplxk) as b on a.fcpbh=b.fcpbh');
      open;
      stringgrid3.RowCount:=RecordCount+2;
      while not eof do
      begin
        stringgrid3.Cells[0,y]:=fields[0].AsString;
        stringgrid3.Cells[1,y]:=fields[1].AsString;
        stringgrid3.Cells[2,y]:=fields[2].AsString;
        stringgrid3.Cells[3,y]:=fields[3].AsString;
        stringgrid3.Cells[4,y]:=fields[4].AsString;
        y := y +1;
        next;
      end;
      sql.Clear;
      sql.Add('select ''合计'',''0'',''0'',sum(frksl) as rkzs,SUM(fcksl) as ckzs from cpcrkmxz where datename(week,fjzdate)=datename(week,'''+datetimetostr(datetimepicker3.Date)+''') and year(fjzdate)=year('''+datetimetostr(datetimepicker3.Date)+''') and fisdel=''N''');
      open;
      if not eof then
      begin
        stringgrid3.Cells[0,y]:=fields[0].AsString;
        stringgrid3.Cells[1,y]:=fields[1].AsString;
        stringgrid3.Cells[2,y]:=fields[2].AsString;
        stringgrid3.Cells[3,y]:=fields[3].AsString;
        stringgrid3.Cells[4,y]:=fields[4].AsString;
      end;
    end;
  Except
    Application.MessageBox('查询失败！','生产统计查询提示');
  end;
end;

